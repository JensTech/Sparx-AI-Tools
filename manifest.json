{
    "manifest_version": 3,
    "name": "Sparx AI Tools",
    "version": "19.1.2026",
    "permissions": [
        "activeTab",
        "scripting",
        "clipboardWrite",
        "storage",
        "notifications"
    ],
    "icons": {
        "128": "cdn/img/logo.png"
    },
    "background": {
        "service_worker": "api/sw.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://maths.sparx-learning.com/*"
            ],
            "js": [
                "maths/content.js"
            ]
        },
        {
            "matches": [
                "https://reader.sparx-learning.com/*"
            ],
            "js": [
                "reader/content.js"
            ]
        },
        {
            "matches": [
                "https://science.sparx-learning.com/*"
            ],
            "js": [
                "science/content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "cdn/img/*.svg"
            ],
            "matches": [
                "https://*.sparx-learning.com/*"
            ]
        }
    ]
}